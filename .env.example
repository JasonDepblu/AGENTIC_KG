# Agentic KG Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Neo4j Database Configuration
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# Path to Neo4j import directory (for CSV files)
# This should match the volume mount in docker-compose.yml
NEO4J_IMPORT_DIR=/path/to/your/data

# ===========================================
# LLM Configuration (DashScope / Alibaba Cloud)
# ===========================================
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ===========================================
# Optional: Additional API Keys
# ===========================================
# OPENAI_API_KEY=your_openai_api_key_here
# MISTRAL_API_KEY=your_mistral_api_key_here

# ===========================================
# Optional: Search and Retrieval
# ===========================================
# TAVILY_API_KEY=your_tavily_api_key_here
# SERPAPI_API_KEY=your_serpapi_api_key_here

# ===========================================
# Optional: Embedding Services
# ===========================================
# SILICON_API_KEY=your_silicon_api_key_here
# BGE_API_KEY=your_bge_api_key_here

# ===========================================
# Application Settings
# ===========================================
LOG_LEVEL=INFO
MAX_STRUCTURED_OUTPUT_RETRIES=3
